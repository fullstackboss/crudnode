<div class="container">
    <div class="row">
        <h3 class="text-center py-2">Lista de personas</h3>
        {{#if personas}}
        <div class="cold-md-3">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                    <tr>
                        <td>{{ name }}</td>
                        <td>{{ lastname }}</td>
                        <td>{{ age }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/edit/{{id}}" class="btn btn-warning">Editar</a>
                                <a href="/delete/{{id}}" class="btn btn-danger">eliminar</a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">Registro de personas</td>

                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Debes Crear una persona</h3>
            </div>
            <div class="card-body">
                <p>
                    Presiona este boton para que puedas registrar a una persona en la aplicaci√≥n
                </p>
                <a href="#" class="btn btn-primary">Ir a crear</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>